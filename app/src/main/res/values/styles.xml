<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sucessToast">

        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorPrimaryDark</item>
        <item name="stTextSize">20sp</item>
        <item name="stColorBackground">#90EE90</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">@color/colorPrimaryDark</item>
        <item name="stIconStart">@drawable/successful</item>
        <item name="stRadius">15dp</item>
        <item name="stLength">LONG</item>

    </style>

    <style name="lowBalanceToast">

        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorPrimaryDark</item>
        <item name="stTextSize">20sp</item>
        <item name="stColorBackground">#FF6347</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">@color/colorPrimaryDark</item>
        <item name="stIconStart">@drawable/lowmoney</item>
        <item name="stRadius">15dp</item>
        <item name="stLength">LONG</item>

    </style>

    
</resources>
